@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section styles
    {
    <link rel="shortcut icon" href="/images/favicon.png" />

    <link rel="stylesheet" href="/vendors/select2/select2.min.css">
    <link rel="stylesheet" href="/vendors/select2-bootstrap-theme/select2-bootstrap.min.css">
    <link rel="shortcut icon" type="image/png" href="/img/favicon.png">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Leckerli+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/Content/main.css" />
    <link rel="stylesheet" href="/Content/upload.css" />
    <script src="/Scripts/uikit.js"></script>
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Book</h4>
                <p class="card-description">
                    Book Necessary information
                </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputUsername1">Book Name</label>
                        <input name="Name" type="text" class="form-control border border-secondary">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">AuthorName</label>
                        <input name="AuthorName" class="form-control border border-secondary" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Price</label>
                        <input name="Price" type="number" class="form-control border border-secondary" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Status</label>
                        <select name="unit-incre" class="col-12 form-control border border-secondary">
                            <option value="1">Hot</option>
                            <option value="2">New</option>
                            <option value="3">Best Selling</option>
                        </select>
                    </div>

                </form>
            </div>
        </div>
    </div>
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="flex-column">
                    <div class="p-2 col-lg-12">
                        <h4 class="card-title">Upload Image</h4>
                        @*  button image*@

                        <input type="file" id="fileElem" multiple accept="image/*" style="display:none" onchange="handleFiles(this.files)">
                        <button type="button" id="btnThumbnailLink" class="btn btn-primary mr-2"> Upload</button>
                        <input id="linkThumbnails" hidden />

                        @*```````````````````````````````*@
                        <div id="dropbox" class="uk-margin-large-top">
                            <div class="form_controls">
                                <div class="upload_button_holder" style="display:flex;flex-wrap:wrap;">

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body text-center">
                <button type="button" onclick="" id="btnCreateAticle" class="btn btn-primary mr-2"> Create</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript">
    </script>
    <script src="~/js/Admin/store.js"></script>
    <script src="~/js/Admin/book.js"></script>
}
