@model EatClean.Entity.Account
@{
    ViewBag.Title = "CreateArticle";
    var tags = ViewBag.Tags;
    var categories = ViewBag.Categories;
}

@if (User.IsInRole("User"))
{
    <div class="d-md-flex justify-content-center" style="width: 100%">
        <div class="d-flex flex-column flex-shrink-0 p-md-3 pt-3 pb-3 col-md-3 col-12" style="background-color: #eb4a36; border-radius: 20px">
            <a href="/Kocina/UserDetail" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <svg class="" width="16" height="32"><use xlink:href="#bootstrap"></use></svg>
                <span class="fs-4">Welcome, @Html.DisplayFor(model => model.UserName)</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="/Kocina/Index" class="nav-link text-white" aria-current="page">
                        <svg class="bi me-2" width="16" height="16"><use xlink:href="#home"></use></svg>
                        Home
                    </a>
                </li>
                <li>
                    <a href="/Kocina/UserDetail" class="nav-link text-white">
                        <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
                        User Details
                    </a>
                </li>
                <li>
                    <a href="/Kocina/CreateArticle" class="nav-link text-white">
                        <svg class="bi me-2" width="16" height="16"><use xlink:href="#table"></use></svg>
                        Create Article
                    </a>
                </li>
            </ul>
            <hr>
            <a href="/Kocina/Logout" class="nav-link text-white">
                <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
                Logout
            </a>
        </div>
        <div class="ms-md-2 mt-md-1 mt-4 d-md-flex col-md-8 col-12">
            <div class="container-md">
                <div class="ml-md-2 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">General Information</h3>
                            <form>
                                <input type="hidden" name="userId" value="@ViewBag.UserId" />
                                <div class="form-group">
                                    <label class="uk-form-label" for="exampleInputUsername1">Title</label>
                                    <input name="title" type="text" class="uk-input uk-form-large" id="titleArticle">
                                </div>
                                <div class="form-group mt-3">
                                    <label class="uk-form-label" for="exampleInputEmail1">Description</label>
                                    <textarea name="description" style="height: 200px" class="uk-input uk-form-large" id="exampleInputEmail1" rows="4" cols="50"></textarea>
                                </div>
                                <div class="d-flex mt-3 justify-content-between">
                                    <div class="form-group d-flex flex-column">
                                        <label class="uk-form-label" for="exampleInputPassword1">Category</label>
                                        <select name="category" class="uk-input uk-form-large uk-form-width-medium">
                                            @if (categories != null)
                                            {
                                                foreach (var cate in categories)
                                                {
                                                    <option value="@cate.Id">@cate.Name</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="form-group d-flex flex-column">
                                        <label class="uk-form-label" for="exampleInputPassword1">Tags</label>
                                        <select name="unit" class="uk-input uk-form-large uk-form-width-medium">
                                            @if (tags != null)
                                            {
                                                foreach (var Tag in tags)
                                                {
                                                    <option value="@Tag.Id">@Tag.Name</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="d-flex" style="align-items: stretch">
                    <div class="col-6 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <div class="uk-width-expand@m">
                                    <div class="uk-article">
                                        <div>
                                            <h3>How to Make It</h3>
                                            <input class="uk-button uk-button-secondary" type="button" id="add-step" value="Add">
                                        </div>
                                        <hr class="uk-margin-medium-top">
                                        <div id="uk-article-add">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <div class="uk-width-expand@m">
                                    <div>
                                        <h3>Ingredients</h3>
                                        <p class="uk-button uk-button-secondary" style="margin:0px;"><a class="text-light" href="#ex1" rel="modal:open">Create Ingrendient</a></p>
                                    </div>
                                    <ul class="uk-list uk-list-large uk-list-divider uk-margin-medium-top ingrendients">
                                    </ul>
                                    <div id="ex1" class="modal">
                                        <h3>Thanks for clicking. That felt good.</h3>
                                        <div class="form-group mt-5">
                                            <label for="exampleInputUsername1">Name of The Igredient</label>
                                            <input type="text" name="ingrendient-name" class="uk-input uk-form-large" id="exampleInputUsername1">
                                        </div>
                                        <div class="form-group d-flex mt-3">
                                            <div class="group-item d-flex flex-column">
                                                <label for="exampleInputUsername1">Volume</label>
                                                <input type="number" name="volume" style="padding:8px;" class="uk-input uk-form-large col-10" id="exampleInputUsername1">
                                            </div>
                                            <div class="group-item">
                                                <label for="exampleInputPassword1">Unit</label>
                                                <select name="unit-incre" class="uk-input uk-form-large col-12">
                                                    <option value="Pound">Pound</option>
                                                    <option value="Gam">Gam</option>
                                                    <option value="Kg">Kg </option>
                                                    <option value="Muỗng">Muỗng </option>
                                                    <option value="Thìa">Thìa </option>
                                                    <option value="Cây">Cây </option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="text-center m-3">
                                            <p style="color:red" id="msg-error"></p>
                                        </div>
                                        <div class="text-center">
                                            <input class="uk-button uk-button-primary" onclick="addIngrendient()" type="button" value="Add" style="width: 100px">
                                        </div>
                                    </div>
                                    <div class="uk-margin-medium-top tags" data-uk-margin>
                                        @* <a class="uk-display-inline-block" href="#"><span class="uk-label uk-label-light">dinner</span></a>
                            <a class="uk-display-inline-block" href="#"><span class="uk-label uk-label-light">casserole</span></a>
                            <a class="uk-display-inline-block" href="#"><span class="uk-label uk-label-light">party</span></a>
                            <a class="uk-display-inline-block" href="#"><span class="uk-label uk-label-light">meat</span></a>
                                        *@
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="flex-column">
                                <div class="p-2 col-lg-12">
                                    <h4 class="card-title">Upload Image</h4>
                                    @*  button image*@
                                    <input type="file" id="fileElem" multiple accept="image/*" style="display:none" onchange="handleFiles(this.files)">
                                    <button type="button" id="btnThumbnailLink" class="uk-button uk-button-secondary mr-2"> Upload</button>
                                    <input id="linkThumbnails" hidden />

                                    @*```````````````````````````````*@
                                    <div id="dropbox" class="uk-margin-large-top">
                                        <div class="form_controls">
                                            <div class="upload_button_holder" style="display:flex;flex-wrap:wrap;">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body text-center">
                            <button type="button" id="btnCreateAticle" class="uk-button uk-button-primary" style="width: 200px">Create</button>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
                <!-- partial -->
            </div>
        </div>
    </div>
}
@if (!User.IsInRole("User"))
{
    <div class="text-center">
        <h3>You are not logged in!</h3>
        <a href="/Kocina/Login"><button class="btn btn-secondary">Login</button></a>
    </div>
}
@section scripts{
    <script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript">
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <!--     <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script> -->
    <!-- jQuery Modal -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
    <link rel="stylesheet" href="~/Content/Modal.css" />
    <script src="~/Scripts/store.js"></script>
}

